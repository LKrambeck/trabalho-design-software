@startuml
title Diagrama de Classes - Dom√≠nio

enum UserRole {
    CLIENTE
    ADMIN
}

class Usuario {
    +id: UUID
    +nome: String
    +email: String
    +telefone: String
    +role: UserRole
}

class Espaco {
    +id: UUID
    +nome: String
    +capacidade: Int
    +preco: Decimal
    +fotos: List<String>
}

class Reserva {
    +id: UUID
    +dataInicio: DateTime
    +dataFim: DateTime
    +valorTotal: Decimal
    --
    +ehPeriodoValido()
    +conflitaCom(r: Reserva)
}

class Pagamento {
    +id: UUID
    +status: StatusPagamento
    +valorPago: Decimal
    +dataPagamento: DateTime
}

enum StatusPagamento {
    SINAL
    QUITADO
}

Usuario "1" -- "0..*" Reserva
Espaco "1" -- "0..*" Reserva
Reserva "1" -- "1" Pagamento

@enduml
